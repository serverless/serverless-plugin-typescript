{
  "name": "serverless-plugin-typescript",
  "version": "2.0.0",
  "license": "MIT",
  "main": "dist/src/index.js",
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "rimraf dist && tsc",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "prepare-release": "standard-version",
    "prepublish": "npm run build",
    "precommit": "npm run test",
    "pretest": "npm run lint",
    "test": "jest"
  },
  "standard-version": {
    "skip": {
      "commit": true,
      "tag": true
    },
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "perf",
        "section": "Performance Improvements"
      },
      {
        "type": "refactor",
        "section": "Maintenance Improvements"
      }
    ]
  },
  "repository": "serverless/serverless-plugin-typescript",
  "keywords": [
    "serverless",
    "serverless plugin",
    "typescript",
    "aws lambda"
  ],
  "devDependencies": {
    "@types/fs-extra": "5.0.5",
    "@types/jest": "24.0.12",
    "@types/lodash": "4.14.123",
    "@types/node": "12.6.2",
    "jest": "24.5.0",
    "mock-fs": "4.9.0",
    "rimraf": "2.6.3",
    "standard-version": "^9.3.1",
    "ts-jest": "24.0.2",
    "tslint": "5.14.0",
    "typescript": "^3.9.10"
  },
  "dependencies": {
    "fs-extra": "^7.0.1",
    "globby": "^10.0.2",
    "lodash": "^4.17.21"
  },
  "peerDependencies": {
    "serverless": "2",
    "typescript": ">=2.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "engines": {
    "node": ">=10.0"
  }
}
